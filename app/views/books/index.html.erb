<h1>All Books</h1>

<p> <%= link_to "Home", root_path %> </p>
<p> <%= link_to "Create new", new_book_path %> </p>

<p><%= flash[:notice]%></p>

<table>
    <tr>
        <th>Spell Count: </th>
        <th>Title:</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
        <td><%= book.spells.count %></td>
        <td><%= link_to book.name, book%></td>
        <td><button><%= link_to 'Delete Book', books_destroy_path(:id => book.id) %></button></td>
    </tr>
    <% end %>
</table>
