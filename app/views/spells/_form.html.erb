<%= form_with(model: @spell, local: true) do |form| %>

    <div>
        <%= form.label "Level: " %>
        <%= form.select :level, (0..9) %>
    </div>

    <div>
        <%= form.label "Name: " %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label "School: " %>
        <%= form.select(:school, Spell.school_select) %>
    </div>

    <div>
        <%= form.label "Concentration: " %>
        <%= form.radio_button(:concentration, true) %>
        <%= form.label(:concentration, "Yes", :value => "true") %>
        <%= form.radio_button(:concentration, false) %>
        <%= form.label(:concentration, "No", :value => "false") %>
    </div>

    <div>
        <%= form.label "Description: " %> <br><br>
        <%= form.text_area :description, size: "60x12" %>
    </div>
    <%= form.submit "Submit" %>
<% end %>
