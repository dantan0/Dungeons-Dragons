<body>
  <header>
      <h1 class = "logo">All Spells</h1>
      <nav>
        <ul>
          <li> <%= link_to "Home", root_path%> </li>
          <li> <%= link_to "Create New", new_spell_path%> </li>
        </ul>
      </nav>
  </header>

  <h2 class = "top"><%= flash[:notice]%></h2>

  <table class = "spell-table">
      <tr>
          <th>Name:</th>
          <th>Level:</th>
          <th>School:</th>
          <th>Concentration:</th>
      </tr>
      <% @spells.each do |spell| %>
      <tr>
          <td><%= link_to spell.name, spell%></td>
          <td><%= spell.level %></td>
          <td><%= spell.school %></td>
          <td>
              <% if spell.concentration == true %>
                  <%= "Yes" %>
              <% else %>
                  <%= "No" %>
              <% end %>
          </td>
          <td><button><%= link_to "Edit", edit_spell_path(spell) %></button></td>
          <td><button><%= link_to "Add to Book", edit_book_path(:id => spell.id)%></button></td>
          <td><button><%= link_to "Delete", spells_destroy_path(:id => spell.id)%> </button></td>
      </tr>
      <% end %>
  </table>
</body>
